<!DOCTYPE html>
<html>
  <head>
    <title>DailyNewsArticleSearch</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <header>
    <ul class="header-menus">
      <li>
        <%= link_to("Top", "/") %>
      </li>
    </ul>
  </header>
  <body>

    <% if flash[:notice]%>
     <div class="flash">
       <%= flash[:notice]%>
     </div>
    <% end %>
    
    <%= yield %>
  </body>
</html>
